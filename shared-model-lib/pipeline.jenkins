evaluate(readFileFromWorkspace("${WORKSPACE}/cicd/jobdsl/commonPipelineJobDefinitions.groovy"))

def libName = 'shared-model-lib'

pipelineJob(libName) {
  definition {
    cpsScm {
      scm {
        git {
          remote {
            url(GIT_URL)
            credentials(GIT_CREDENTIALS_ID)
          }
          branch(GIT_BRANCH)
        }
      }
      scriptPath("${libName}/${PIPELINE_SCRIPT_NAME}")
      lightweight()
    }
  }
}
